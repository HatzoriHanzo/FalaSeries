<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Activities.MainActivity"
    android:background="@drawable/bg">

    <Button
        android:id="@+id/btn_Cadastrar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:backgroundTint="#FB2B3F"
        android:drawableStart="@drawable/ic_plus"
        android:drawablePadding="10dp"
        android:textAllCaps="false"
        android:paddingStart="40dp"
        android:text="@string/btn_Cadastrar"
        android:textColor="@color/white"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toTopOf="@id/list_series"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="139dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="48dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/btn_Cadastrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView

        android:id="@+id/list_series"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Cadastrar" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginStart="6dp"
        android:textSize="10dp"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginBottom="6dp"
        android:text="Suas sÃ©ries cadastradas:"
        app:layout_constraintBottom_toTopOf="@+id/list_series"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>